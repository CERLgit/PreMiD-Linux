{
  "name": "premid",
  "productName": "PreMiD",
  "author": "Florian 'Timeraa' Metz <me@timeraa.dev> (https://github.com/timeraa)",
  "contributors": [
    "Jack 'DooMLorD' W. <doomlordcs@gmail.com> (https://github.com/doomlerd)"
  ],
  "description": "Discord Rich Presence for web services",
  "version": "2.1.9",
  "repository": {
    "type": "git",
    "url": "git://github.com/PreMiD/Linux.git"
  },
  "bugs": {
    "url": "https://github.com/PreMiD/Linux/issues"
  },
  "homepage": "https://premid.app",
  "license": "MPL-2.0",
  "scripts": {
    "init": "tsc && devScript --copyOnly",
    "start": "electron dist/app/.",
    "dev": "devScript",
    "dist": "tsc && devScript --copyOnly && cd dist/app/ && yarn install",
    "build": "electron-builder --project ./dist/app/ -p never",
    "release": "electron-builder --project ./dist/app/"
  },
  "build": {
    "appId": "com.PreMiD.app",
    "copyright": "PreMiD Org.",
    "publish": [
      {
        "provider": "github",
        "repo": "Linux",
        "owner": "PreMiD",
        "publishAutoUpdate": false
      }
    ],
    "linux": {
      "category": "Utility",
      "icon": "assets/appIcon.icns",
      "maintainer": "Jack 'DooMLorD' W. <doomlordcs@gmail.com> (https://github.com/doomlerd)",
      "target": [
        "deb",
        "rpm",
        "tar.gz",
        "AppImage"
      ]
    },
    "AppImage": {
      "productName": "PreMiD Portable",
      "publish": [
        {
          "provider": "github",
          "owner": "PreMiD",
          "repo": "Linux",
          "publishAutoUpdate": true
        }
      ]
    },
    "tar.gz": {
      "extraFiles": [
        "assets/premid.desktop",
        "assets/appIcon.png"
      ]
    },
    "deb": {
      "packageCategory": "Utility",
      "synopsis": "Discord Rich Presence for web services",
      "publish": [
        {
          "package": "premid",
          "repo": "debian-ubuntu",
          "user": "premid",
          "component": "main",
          "provider": "bintray"
        }
      ]
    },
    "rpm": {
      "publish": [
        {
          "package": "premid",
          "repo": "redhat",
          "user": "premid",
          "provider": "bintray"
        }
      ]
    }
  },
  "devDependencies": {
    "@timeraa/devscript": "Timeraa/DevScript",
    "@types/auto-launch": "5.0.1",
    "@types/discord-rpc": "3.0.2",
    "@types/node": "13.9.0",
    "@types/socket.io": "2.1.4",
    "electron": "8.1.0",
    "electron-builder": "22.4.1",
    "typescript": "3.8.3"
  },
  "dependencies": {
    "@sentry/electron": "1.3.0",
    "auto-launch": "5.0.5",
    "discord-rpc": "github:discordjs/RPC",
    "electron-store": "5.1.1",
    "electron-updater": "4.2.4",
    "socket.io": "2.3.0",
    "source-map-support": "0.5.16"
  }
}
